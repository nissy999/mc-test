{
  "mongodb": {
    "CryptoWatch": {
      "name": "CryptoWatch",
      "host": "127.0.0.1",
      "port": 27017
    }
  },
  "logging": {
    "level": "debug",
    "handlers": {
      "file": {
        "enabled": true,
        "filepath": "/opt/src/mc-test/mc-test.log"
      },
      "stdout": {
        "enabled": true
      },
      "syslog": {
        "enabled": false
      }
    },
    "formatter": "%(asctime)s - %(levelname)s - %(funcName)s - %(lineno)s - %(message)s"
  }
}